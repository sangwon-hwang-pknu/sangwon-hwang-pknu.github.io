{% capture footer_contents %}
  <div class="footer-div">{{ site.division }}</div>
  <div class="footer-div">{{ site.address }}</div>
  <div class="footer-div">Email: <a href="mailto:{{ site.email }}">{{ site.email }}</a> Tel: <a href="tel:{{ site.tel }}">{{ site.tel }}</a></div>
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      {{ footer_contents }}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}

    <div class="container">
      {{ footer_contents }}
    </div>
  </footer>
{% endif %}
